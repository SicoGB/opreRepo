@model List<opr.Models.School>
@{
    ViewBag.Title = "Index";
}
<html>

<body>
    <h2>School Ini Details</h2>
    <form class="grid-form">
        <div data-row-span="6">
            <div data-field-span="3">
                <label for="ex3">School Name:</label>
                <input type="text" name="SchoolName" />
            </div>
            <div data-field-span="2">
                <label for="ex3">Email:</label>
                <input type="text" name="Email" />

            </div> 
            <div data-field-span="1">
                <label for="ex3">Short Code:</label>
                <input type="text" name="ShortCode" />

            </div>
            
        </div>
    </form>
    <div>
        <div>
            @Html.ActionLink("New Add", "AddSchool", "School");
        </div>
        <div>
            <table class="table table-dark table-striped ">
                <tr>
                    <th>School Name</th>
                    <th>Short Code</th>
                    <th>Email</th>
                    <th>Contact Person</th>
                    <th>Contact Person No</th>
                    

                    <th>Action</th>

                </tr>
                @foreach (var std in Model)
                {

                <tr>
                    <td>@std.SchoolName</td>
                    <td>@std.ShortCode</td>
                    <td>@std.Email</td>
                    <td>@std.ContactPname</td>
                    <td>@std.ContactPnum</td>
                    
                    <td>
                        @Html.ActionLink("Edit", "EditSchool", new { id = std.Id })|
                        @Html.ActionLink("Delete", "Delete", new { id = std.Id })|
                    </td>
                </tr>

                }

            </table>

        </div>

    </div>
    <div>
        @Html.ActionLink("<<Go Back<<", "AddSchool", "School");
    </div>
</body>
</html>